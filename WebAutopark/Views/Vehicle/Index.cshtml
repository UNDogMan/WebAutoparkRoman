@model IEnumerable<VehicleViewModel>
@section Scripts{
    <script>
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var recipient = button.data('id')
            var modal = $(this)
            modal.find('#modalDataId').val(recipient)
        })
    </script>
}
@{
    ViewData["Title"] = "Vehicles";
}
<div class="mb-2">
    <h1 class="d-inline">@ViewData["Title"]</h1>
    <form class="d-inline ml-2" asp-action="Create" method="get">
        <button class="btn">Create</button>
    </form>
</div>
<table id="dtOrderExample" class="table table-striped table-sm">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Type</th>
        <th scope="col">Model Name</th>
        <th scope="col">Registration Number</th>
        <th scope="col">Weight</th>
        <th scope="col">Manufacture Year</th>
        <th scope="col">Maileage</th>
        <th scope="col">Color</th>
        <th scope="col">Tank Capacity</th>
        <th scope="col">Consumption</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var vehicle in Model)
    {
        <tr>
            <th scope="row">@vehicle.ID</th>
            <td>@vehicle.VehicleTypeName</td>
            <td>@vehicle.ModelName</td>
            <td>@vehicle.RegistrationNumber</td>
            <td>@vehicle.Weight</td>
            <td>@vehicle.ManufactureYear</td>
            <td>@vehicle.Maileage</td>
            <td>@vehicle.Color</td>
            <td>@vehicle.TankCapacity</td>
            <td>@vehicle.Consumption</td>
            <td>
                <form class="d-inline" asp-controller="Vehicle" asp-action="Details" asp-route-id="@vehicle.ID" method="get">
                    <button class="btn">Details</button>
                </form>
            </td>
            <td>
                <form class="d-inline" asp-controller="Vehicle" asp-action="Edit" asp-route-id="@vehicle.ID" method="get">
                    <button class="btn">Edit</button>
                </form>
            </td>
            <td>
                <button type="button" class="btn d-inline" data-toggle="modal" data-target="#deleteModal" data-id="@vehicle.ID">Delete</button>
            </td>
        </tr>
    }
</table>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Deleting</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to do this?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form asp-action="Delete" method="post">
                    <input id="modalDataId" type="hidden" name="id" value="" />
                    <button type="submit" class="btn btn-primary">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>