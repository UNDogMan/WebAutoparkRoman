@model VehicleViewModel
@{
    ViewData["Title"] = "Create Vehicle";
}
<div class="card">
    <div class="card-header">
        @ViewData["Title"]
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col form-group">
                    <label asp-for="ModelName" class="control-label"></label>
                    <input asp-for="ModelName" class="form-control" />
                    <span asp-validation-for="ModelName" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="ModelName" class="control-label"></label>
                    @Html.DropDownListFor(x => x.VehicleTypeID,
                   new SelectList((IEnumerable<SelectListItem>)ViewData["TypesSelectListItems"], "Value", "Text"), new { @class = "form-control" })
                    <span asp-validation-for="ModelName" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="RegistrationNumber" class="control-label"></label>
                    <input asp-for="RegistrationNumber" class="form-control" />
                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label asp-for="Weight" class="control-label"></label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="ManufactureYear" class="control-label"></label>
                    <input asp-for="ManufactureYear" class="form-control" />
                    <span asp-validation-for="ManufactureYear" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Maileage" class="control-label"></label>
                    <input asp-for="Maileage" class="form-control" />
                    <span asp-validation-for="Maileage" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Color" class="control-label"></label>
                    @Html.DropDownListFor( x => x.Color, 
                   Html.GetEnumSelectList(typeof(Color)), new { @class="form-control"})
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <label asp-for="TankCapacity" class="control-label"></label>
                    <input asp-for="TankCapacity" class="form-control" />
                    <span asp-validation-for="TankCapacity" class="text-danger"></span>
                </div>
                <div class="col form-group">
                    <label asp-for="Consumption" class="control-label"></label>
                    <input asp-for="Consumption" class="form-control" />
                    <span asp-validation-for="Consumption" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>