@model DetailVehicleViewModel
@{
    ViewData["Title"] = "Vehicle ID - " + Model.ID;
}
<div>
    <h1 class="d-inline">@ViewData["Title"]</h1>
    <form class="d-inline" asp-controller="Vehicle" asp-action="Edit" asp-route-id="@Model.ID" method="get">
        <button class="btn">Edit</button>
    </form>
    <button class="btn d-inline ml-2" data-toggle="modal" data-target="#deleteModal">Delete</button>
</div>
<div>
    <table class="table">
        <tr><th>Type:</th><td> @Model.VehicleTypeName</td></tr>
        <tr><th>Model:</th><td> @Model.ModelName</td></tr>
        <tr><th>Registration Number:</th><td> @Model.RegistrationNumber</td></tr>
        <tr><th>Weight:</th><td> @Model.Weight</td></tr>
        <tr><th>Manufacture Year:</th><td> @Model.ManufactureYear</td></tr>
        <tr><th>Maileage:</th><td> @Model.Maileage</td></tr>
        <tr><th>Color:</th><td> @Model.Color</td></tr>
        <tr><th>Tank Capacity:</th><td> @Model.TankCapacity.ToString("0.00")</td></tr>
        <tr><th>Consumption:</th><td> @Model.Consumption.ToString("0.00")</td></tr>
        <tr><th>Tax Per Mounth:</th><td> @Model.TaxPerMounth.ToString("0.00")</td></tr>
        <tr><th>Mileage on full tank:</th><td> @Model.MaxMileage.ToString("0.00")</td></tr>
    </table>
    <div class="m-2">
        <h3>Orders</h3>
        <ul>
            @foreach (var id in Model.OrdersID)
            {
                <li><a asp-controller="Order" asp-action="Details" asp-route-id="@id">@id</a></li>
            }
        </ul>
    </div>
    <a asp-action="Index">Back to Table</a>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Deleting</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to do this?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form asp-action="Delete" method="post">
                    <input id="modalDataId" type="hidden" name="id" value="@Model.ID" />
                    <button type="submit" class="btn btn-primary">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>